  function mainWord(ofCell) {
    var retVal = $(ofCell);
    var currentCell = ofCell;
    while (currentCell != null && ! mainIsTail(currentCell)) {
      retVal = retVal.add(currentCell)
      currentCell = mainNextCell(currentCell);
    }

    currentCell = ofCell;
    while (currentCell != null && ! mainIsHead(currentCell)) {
      retVal = retVal.add(currentCell)
      currentCell = mainPrevCell(currentCell);
    }

    return retVal;
  }

  function altWord(ofCell) {
    var retVal = $(ofCell);
    var currentCell = ofCell;
    while (currentCell != null && ! altIsTail(currentCell)) {
      retVal = retVal.add(currentCell)
      currentCell = altNextCell(currentCell);
    }
    currentCell = ofCell;

    while (currentCell != null && ! altIsHead(currentCell)) {
      retVal = retVal.add(currentCell)
      currentCell = altPrevCell(currentCell);
    }

    return retVal;
  }

  // Finds the end of a word of the current orientation mode from the given
  // parameter cell.  It is the callers responsibility that the argument cell
  // is part of a word--no error checking is provided.
  function mainWordEnd(fromCell) {
    var nextCell = fromCell;
    while (!mainIsTail(nextCell)) {
      nextCell = mainNextCell(nextCell);
    }
    return nextCell;
  }

  // isBlank() and isFilled() each return false on null input.  Depending on
  // how null is expected to be handled, it may be favorible to negate the
  // result of the check opposite what is desired.
  //
  // e.g. (cell != null && isBlank(cell)) can be written more succintly as
  //      (! isFilled(cell)) without loss of correct null handling, whereas
  //      (isBlank(cell)) would cause bugs on null input.
  //
  // +=======+===========+============+
  // | INPUT | isBlank() | isFilled() |
  // +=======+===========+============+
  // | null  |   FALSE   |    FALSE   |
  // |  'c'  |   FALSE   |    TRUE    |
  // |  ''   |   TRUE    |    FALSE   |
  // +=======+===========+============+
  function isBlank(checkCell) {
    return ((checkCell != null) && (checkCell.content == ''));
  }

  function isFilled(checkCell) {
    return ((checkCell != null) && (checkCell.content != ''));
  }

  //
  // Cursor enable/disable methods
  //

  function showCursor() {
    $('img.xw-value', $editorCell.selfNode).attr('src', $cursorImage);
  }

  function hideCursor() {
    var cursorReplacement;

    if (isBlank($editorCell)) {
      cursorReplacement = $blankImage
    } else {
      cursorReplacement = $valueImages.attr($editorCell.content);
    }

    $('img.xw-value', $editorCell.selfNode).attr('src', cursorReplacement);
  }

  //
  // Cursor movement methods
  //

  function moveCursorRight() {
    if ($editorCell.selfNode.hasClass('xw-hend')) { return false; }

    _stepHorizontal($editorCell.toRight);
    return true;
  }

  function moveCursorBelow() {
    if ($editorCell.selfNode.hasClass('xw-vend')) { return false; }

    _stepVertical($editorCell.toBelow);
    return true;
  }

  function moveCursorLeft() {
    if ($editorCell.selfNode.hasClass('xw-htop')) { return false; }

    _stepHorizontal($editorCell.toLeft);
    return true;
  }

  function moveCursorBelow() {
    if ($editorCell.selfNode.hasClass('xw-vtop')) { return false; }

    _stepVertical($editorCell.toAbove);
    return true;
  }

  // Private methods for internal use only.
  // 
  // "Stepping" moves the cursor without changing the fill space to
  // a cell that is given as a parameter.  It is the caller's 
  // responsibility to ensure that parameter value is within the 
  // active word's fill region.
  //
  // "Extending" and "Shrinking" are used to describe movement that
  // also requires changing the active word region's fill space.
  // Neither requires a parameter because both kinds of movement can
  // only occur at the end of the present fill region.
  // "Extending" increases the fill region by one cell.
  // "Shrinking" decreases the fill region by one cell.
  //
  // "Backfilling" and "Collapsing" describe extension and reduction
  // by moving the start-of-word marker, respectively.
  function _stepHorizontal(nextCell) {
    hideCursor();
    $editorCell.sameCol.removeClass('xw-samecol');
    $editorCell = nextCell;
    $editorCell.sameCol.not($editorCell).addClass('xw-samecol');
    showCursor();
  }

  function _stepVertical(nextCell) {
    hideCursor();
    $editorCell.sameRow.removeClass('xw-samerow');
    $editorCell = nextCell;
    $editorCell.sameRow.not($editorCell).addClass('xw-samerow');
    showCursor();
  };

  function _extendHorizontal(fromEnd) {
    if (fromEnd.selfNode.hasClass('xw-htop')) {
      fromEnd.selfNode.removeClass('xw-hend');
    } else {
      fromEnd.selfNode.removeClass('xw-hend').addClass('xw-hmid');
    }
    
    var thisCell = fromEnd.toRight;
    var nextCell = thisCell.toRight;
    var midClassStr, endClassStr;
    if ($horizontalMode) { 
      midClassStr = 'xw-hsel xw-hmid';
      endClassStr = 'xw-hsel xw-hend';
    } else {
      midClassStr = 'xw-hmid';
      endClassStr = 'xw-hend';
    }
    while (isFilled(nextCell)) {
      thisCell.selfNode.removeClass('xw-samerow').addClass(midClassStr);
      thisCell = nextCell;
      nextCell = nextCell.toRight;
    }
    thisCell.selfNode.removeClass('xw-samerow').addClass(endClassStr);
  }

  function _extendVertical(fromEnd) {
    if (fromEnd.selfNode.hasClass('xw-vtop')) {
      fromEnd.selfNode.removeClass('xw-vend');
    } else {
      fromEnd.selfNode.removeClass('xw-vend').addClass('xw-vmid');
    }
    
    var thisCell = fromEnd.toBelow;
    var nextCell = thisCell.toBelow;
    var midClassStr, endClassStr;
    if ($horizontalMode) { 
      midClassStr = 'xw-vsel xw-vmid';
      endClassStr = 'xw-vsel xw-vend';
    } else {
      midClassStr = 'xw-vmid';
      endClassStr = 'xw-vend';
    }
    while (isFilled(nextCell)) {
      thisCell.selfNode.removeClass('xw-samecol').addClass(midClassStr);
      thisCell = nextCell;
      nextCell = nextCell.toBelow;
    }
    thisCell.selfNode.removeClass('xw-samecol').addClass(endClassStr);
  }

  function _shrinkHorizontal(fromEnd) {
    fromEnd.selfNode.removeClass('xw-hend').addClass('xw-samerow');
    fromEnd.toLeft.selfNode.removeClass('xw-hmid').addClass('xw-hend');
  }

  function _shrinkVertical(fromEnd) {
    fromEnd.selfNode.removeClass('xw-vend').addClass('xw-samecol');
    fromEnd.toAbove.selfNode.removeClass('xw-vmid').addClass('xw-vend');
  }

  function _backfillHorizontal(fromTop) {
    if (fromTop.selfNode.hasClass('xw-hend')) {
      fromTop.selfNode.removeClass('xw-htop');
    } else {
      fromTop.selfNode.removeClass('xw-htop').addClass('xw-hmid');
    }
    
    var thisCell = fromTop.toRight;
    var nextCell = thisCell.toRight;
    while (isFilled(nextCell)) {
      nextCell.removeClass('xw-samerow').addClass('xw-hmid');
      thisCell = nextCell;
      nextCell = nextCell.toRight;
    }
    thisCell.removeClass('xw-samerow').addClass('xw-htop');
  }

  function _backfillVertical(fromTop) {
    if (fromTop.selfNode.hasClass('xw-vend')) {
      fromTop.selfNode.removeClass('xw-vtop');
    } else {
      fromTop.selfNode.removeClass('xw-vtop').addClass('xw-vmid');
    }
    
    var thisCell = fromTop.toBelow;
    var nextCell = thisCell.toBelow;
    while (isFilled(nextCell)) {
      nextCell.removeClass('xw-samecol').addClass('xw-vmid');
      thisCell = nextCell;
      nextCell = nextCell.toBelow;
    }
    thisCell.removeClass('xw-samecol').addClass('xw-vtop');
  }

  function _collapseHorizontal(fromTop) {
    fromTop.selfNode.removeClass('xw-htop').addClass('xw-samerow');
    fromEnd.toRight.selfNode.removeClass('xw-hmid').addClass('xw-htop');
  }

  function _collapseVertical(fromTop) {
    fromEnd.selfNode.removeClass('xw-vtop').addClass('xw-samecol');
    fromEnd.toRight.selfNode.removeClass('xw-vmid').addClass('xw-vtop');
  }

//
// Content manipulation -- setCharacter() and clearCharacter()
//

  function setCharacterHorizontal(c) {
    // Relocate the borders of any vertical words adjacent to the changed
    // cell if it was previously blank.
    if (isBlank($editorCell)) {
      if (($editorCell.toAbove != null) &&
          ($editorCell.toAbove.selfNode.hasClass('xw-vend'))) {
        _extendVertical($editorCell.toAbove);
      } else if (($editorCell.toBelow != null) &&
                 ($editorCell.toBelow.selfNode.hasClass('xw-vtop'))) {
        _backfillVertical($editorCell.toBelow);
      }
    }

    // Perform the assignment.
    var nextCell = $editorCell.toRight;
    $editorCell.content = c;
    
    // Mid-word edits are easy--no expansion to consider, just advance the 
    // cursor within the active word region as tho' <RIGHT ARROW> were struck.
    if (!$editorCell.selfNode.hasClass('xw-hend')) { _stepHorizontal(nextCell); return; }

    // TODO: Error modal!
    // Check conditions that block expansion.  If any of these hold, leave
    // the cursor where it is.
    // -- Reaching a border (there is no next cell to expand into)
    // -- Closing a gap that would join two other words
    // -- Populating all four cells of a 2x2 group
    if (nextCell == null) { return; }

    // Would cause this word to become adjacent to a another parallel word
    // that begin's to the right of the next cell.
    if ((isFilled(nextCell.toRight)) &&
        (isFilled(nextCell.toRight.toRight))) { return; }

    // Would join two vertical words
    if ((isFilled(nextCell.toAbove)) &&
        (isFilled(nextCell.toBelow)) &&
        ((isFilled(nextCell.toAbove.toAbove)) ||
         (isFilled(nextCell.toBelow.toBelow)))) { return; }

    // Would complete a 2x2 congestion grid.
    if (((isFilled($editorCell.toBelow)) &&
         (isFilled(nextCell.toBelow))) || 
        ((isFilled($editorCell.toAbove)) &&
         (isFilled(nextCell.toAbove)))) { return; }

    // If we reach this point, expand the edit region and step the cursor.
    _extendHorizontal($editorCell);
    _stepHorizontal($editorCell.toRight);
  }

  function setCharacterVertical(c) {
    // Perform the assignment.
    var nextCell = $editorCell.toBelow;
    $editorCell.content = c;
    
    // Mid-word edits are easy--no expansion to consider, just advance the 
    // cursor within the active word region as tho' <RIGHT ARROW> were struck.
    if (!$editorCell.hasClass('xw-vend')) { _stepVertical(nextCell); return; }
    $editorCell.toRight.selfNode.addClass('xw-hsel');

    // Check conditions that block expansion.  If any of these hold, leave
    // the cursor where it is.
    // -- Reaching a border (there is no next cell to expand into)
    // -- Closing a gap that would join two other words
    // -- Populating all four cells of a 2x2 group
    if (nextCell == null) { return; }

    // Would cause this word to become adjacent to a another parallel word
    // that begin's to the right of the next cell.
    if ((isFilled(nextCell.toBelow)) &&
        (isFilled(nextCell.toBelow.toBelow))) { return; }

    // Would join two perpendicular (horizontal) words
    if ((isFilled(nextCell.toLeft)) &&
        (isFilled(nextCell.toRight)) &&
        ((isFilled(nextCell.toLeft.toLeft)) ||
         (isFilled(nextCell.toRight.toRight)))) { return; }

    // Would complete a 2x2 congestion grid.
    if (((isFilled($editorCell.toRight)) &&
         (isFilled(nextCell.toRight))) || 
        ((isFilled($editorCell.toLeft)) &&
         (isFilled(nextCell.toLeft)))) { return; }

    // If we reach this point, expand the edit region and step the cursor.

    // Relocate the borders of any vertical words adjacent to the changed
    // cell if it was previously blank.
    if (isBlank($editorCell)) {
      if (($editorCell.toLeft != null) &&
          ($editorCell.toLeft.selfNode.hasClass('xw-hend'))) {
        _extendHorizontal($editorCell.toLeft);
      } else if (($editorCell.toRight != null) &&
                 ($editorCell.toRight.selfNode.hasClass('xw-htop'))) {
        _backfillHorizontal($editorCell.toRight);
      }
    }

    $editorCell.toBelow.selfNode.addClass('xw-vsel');
    _extendVertical($editorCell);
    _stepVertical($editorCell.toBelow);
  }

  function clearCharacterHorizontal() {
    // Backspace removes a character left of the current cell and therefore
    // does not apply to the top cell of a word.
    if ($editorCell.selfNode.hasClass('xw-htop')) {
      return showBackspaceAtWordTopError($editorCell);
    }
  
    // Check whether any vertical words will split or be truncated by this
    // action and prevent any word from being reduced to a single cell.
    // Words may not be split in two since the editor is not allowed to
    // glue them back together afterwards.
    var pruneCell  = mainWordEnd($editorCell);
    if (isFilled(pruneCell.toAbove)) {
      if ((pruneCell.toAbove.selfNode.hasClass('xw-vtop')) ||
          (pruneCell.toAbove.toAbove.selfNode.hasClass('xw-vtop'))) {
        return showShortTruncateError(pruneCell);
      } else if (! pruneCell.selfNode.hasClass('xw-vend')) {
        return showIllegalSplitError(pruneCell);
      }
  
      _shrinkVertical(pruneCell);
    } else if (isFilled(pruneCell.toRight)) {
      if ((pruneCell.toBelow.selfNode.hasClass('xw-vend')) ||
          (pruneCell.toBelow.toBelow.selfNode.hasClass('xw-vend'))) {
        return showShortTruncateError(pruneCell);
      } else if (! pruneCell.selfNode.hasClass('xw-vtop')) {
        return showIllegalSplitError(pruneCell);
      }

      _collapseVertical(pruneCell);
    }
    
    // The edit is approved.  Shift all content down by one cell, then shrink
    // the active region by one.
    var thisCell = $editorCell.toLeft;
    var thisImg  = $('img.xw-value', thisCell.selfNode);
    var nextCell = $editorCell;
    var nextImg  = null;
    while (thisCell != pruneCell) {
      thisCell.content = nextCell.content;
  
      nextImg  = $('img.xw-value', nextCell.selfNode);
      thisImg.attr('src', nextImg.attr('src'));
      
      thisCell = nextCell;
      thisImg  = nextImg;
      nextCell = thisCell.toRight;
    }
  
    _shrinkHorizontal(pruneCell);
  }

  function clearCharacterVertical() {
    // Backspace removes a character left of the current cell and therefore
    // does not apply to the top cell of a word.
    if ($editorCell.selfNode.hasClass('xw-vtop')) {
      return showBackspaceAtWordTopError($editorCell);
    }
  
    // Check whether any vertical words will split or be truncated by this
    // action and prevent any word from being reduced to a single cell.
    // Words may not be split in two since the editor is not allowed to
    // glue them back together afterwards.
    var pruneCell  = mainWordEnd($editorCell);
    if (isFilled(pruneCell.toLeft)) {
      if ((pruneCell.toLeft.selfNode.hasClass('xw-htop')) ||
          (pruneCell.toLeft.toLeft.selfNode.hasClass('xw-htop'))) {
        return showShortTruncateError(pruneCell);
      } else if (! pruneCell.selfNode.hasClass('xw-hend')) {
        return showIllegalSplitError(pruneCell);
      }
  
      _shrinkHorizontal(pruneCell);
    } else if (isFilled(pruneCell.toRight)) {
      if ((pruneCell.toRight.selfNode.hasClass('xw-hend')) ||
          (pruneCell.toRight.toRight.selfNode.hasClass('xw-hend'))) {
        return showShortTruncateError(pruneCell);
      } else if (! pruneCell.selfNode.hasClass('xw-htop')) {
        return showIllegalSplitError(pruneCell);
      }
  
      _collapseHorizontal(pruneCell);
    }
    
    // The edit is approved.  Shift all content down by one cell, then shrink
    // the active region by one.
    var thisCell = $editorCell.toAbove;
    var thisImg  = $('img.xw-value', thisCell.selfNode);
    var nextCell = $editorCell;
    var nextImg  = null;
    while (thisCell != pruneCell) {
      thisCell.content = nextCell.content;
  
      nextImg  = $('img.xw-value', nextCell.selfNode);
      thisImg.attr('src', nextImg.attr('src'));
      
      thisCell = nextCell;
      thisImg  = nextImg;
      nextCell = thisCell.toBelow;
    }
  
    _shrinkVertical(pruneCell);
  }

  //
  // Active/Inactive/Same(Row|Col) Highlight Manipulation
  //

  function enableEditor() {
    var wordCells;
    $(document).on('keydown', onKeyboardInput);

    wordCells = mainWord($editorCell);
    $editorCell.sameRow.not(wordCells).addClass('xw-samerow');
    wordCells.addClass('xw-hsel');

    wordCells = altWord($editorCell);
    $editorCell.sameCol.not(wordCells).addClass('xw-samecol');
    wordCells.addClass('xw-vsel');

    showCursor();
  }

  function closeWordEditor() {
    $(document).off('keydown', onKeyboardInput);

    // Remove any trailing blank space and then check for minimum word length.
    // Remove words that are too short with an error.
    var wordEnd = mainWordEnd($editorCell);
    if ($horizontalMode) {
      if (isBlank(wordEnd)) {
        _shrinkHorizontal(wordEnd);
      }

      if (wordEnd.selfNode.hasClass('xw-htop')) {
        wordEnd.selfNode.removeClass( 'xw-htop xw-hend' )
        wordEnd.content = '';

        $('img.xw-value', wordEnd.selfNode
        ).attr('src', $blankImage);

        showShortWordError();
      } else if( wordEnd.toLeft.selfNode.hasClass('xw-htop')) {
        wordEnd.selfNode.removeClass('xw-hend');
        wordEnd.content = '';

        wordEnd.toLeft.content = '';
        wordEnd.toLeft.selfNode.removeClass('xw-htop');

        $('img.xw-value', wordEnd.selfNode.add(wordEnd.toLeft.selfNode)
        ).attr('src', $blankImage);

        showShortWordError();
      }
    } else {
      if (isBlank(wordEnd)) {
        _shrinkVertical(wordEnd);
      }

      if (wordEnd.selfNode.hasClass('xw-vtop')) {
        wordEnd.selfNode.removeClass('xw-vtop xw-vend');
        wordEnd.content = '';

        $('img.xw-value', wordEnd.selfNode
        ).attr('src', $blankImage);

        showShortWordError();
      } else if (wordEnd.toAbove.selfNode.hasClass('xw-vtop')) {
        wordEnd.selfNode.removeClass('xw-vend');
        wordEnd.content = '';

        wordEnd.toAbove.content = '';
        wordEnd.toAbove.selfNode.removeClass('xw-vtop');

        $('img.xw-value', wordEnd.selfNode.add(wordEnd.toAbove.selfNode)
        ).attr('src', $blankImage);

        showShortWordError();
      }
    }
      
    $editorCell.sameRow.removeClass('xw-hsel xw-samerow');
    $editorCell.sameCol.removeClass('xw-vsel xw-samecol');
    hideCursor();

    $editorCell = null;
  }

  //
  // Error Modal Displays
  //

  function showShortWordError() {
    alert('Pruning editor result because it is too short');

    return false;
  }

  function showMaxWordsError() { alert('Max Words'); return false; }

  function showHorizontalMergeError(mergeCell) {
    alert('Horizontal merge error at ({row},{col})'.format(mergeCell));

    return false; 
  }

  function showVerticalMergeError(mergeCell) {
    alert('Vertical merge error at ({row},{col})'.format(mergeCell));

    return false;
  }

  function showCongesionError(hPeer, vPeer) {
    alert( '2x2 congestion error at [ ({hrow},{vcol}); ({hrow},{hcol}); ({vrow},{vcol}); ({vrow},{hcol}) ]'.format({ hrow: hPeer.row, hcol: hPeer.col, vrow: vPeer.row, vcol: vPeer.col })
    );

    return false;
  }

  function showBackspaceAtWordTopError(pruneCell) {
    alert('Cannot backspace from word starting at ({row},{col})'.format(pruneCell));

    return false;
  }

  function showShortTruncateError(pruneCell) {
    alert('Cannot truncate intersecting word at ({row},{col})'.format(pruneCell));

    return false;
  }

  function showIllegalSplitError(pruneCell) {
    alert('Cannot split intersecting word at ({row},{col})'.format(pruneCell));

    return false;
  }

  initialize();
</script>
