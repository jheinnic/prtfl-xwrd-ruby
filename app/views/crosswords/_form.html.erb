  var $horizontalStrategy = {
    unit: '.xw-htop .xw-hend',          mid: '.xw-hmid',
    head: '.xw-htop',                  tail: '.xw-hend',
    altUnit: '.xw-vtop .xw-vend',    altMid: '.xw-vmid',
    altHead: '.xw-vtop',            altTail: '.xw-vend',

