  //
  // +=======+===========+============+
  // | INPUT | isBlank() | isFilled() |
  // +=======+===========+============+
  // | null  |   FALSE   |    FALSE   |
  // |  'c'  |   FALSE   |    TRUE    |
  // |  ''   |   TRUE    |    FALSE   |
  // +=======+===========+============+
  function isBlank(checkCell) {
    return ((checkCell != null) && (checkCell.content == ''));
  }

  function isFilled(checkCell) {
    return ((checkCell != null) && (checkCell.content != ''));
  }

