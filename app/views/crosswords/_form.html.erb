      return fromCell.toLeft;
    },
    isHead: function(checkCell) {
      return checkCell.selfNode.hasClass('xw-htop');
    },
    isTail: function(checkCell) {
      return checkCell.selfNode.hasClass('xw-hend');
    }
  };
  var $verticalStrategy = {
