  var $altStrategy  = $verticalStrategy;

  function mainNextCell(ofCell) { return $mainStrategy.nextCell(ofCell); }
  function altNextCell(ofCell) { return $altStrategy.nextCell(ofCell); }

  function mainPrevCell(ofCell) { return $mainStrategy.prevCell(ofCell); }
  function altPrevCell(ofCell) { return $altStrategy.prevCell(ofCell); }

